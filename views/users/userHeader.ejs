<% if (message && message.error ) { %>
    <div class="container alert alert-dismissible fade show alert-danger" role="alert">
        <button class="btn-close" type="button" data-bs-dismiss='alert' aria-label="close"></button>
        <strong class="container">
            
            <%= message.error %>
            
        </strong>
    </div>
<% } else if (message && message.success) { %>
    <div class="container alert alert-dismissible fade show alert-success" role="alert">
        <button class="btn-close" type="button" data-bs-dismiss='alert' aria-label="close"></button>
        <strong class="container">
            <%= message.success %>
        </strong>
    </div>
<% } %>




