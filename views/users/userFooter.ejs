<script>

    function renderBg() {

        const products = document.querySelectorAll('[data-id="bg-render"]');

        products.forEach((product) => {

            const imgUrl = product.getAttribute('data-for-bg');

            product.style.backgroundImage = `url('${imgUrl}')`;

        })

    };



    const clickable_Divs = document.querySelectorAll('[click-id="productDetailsLink"]');

    clickable_Divs.forEach((clickableDiv) => {
        const groupID = clickableDiv.getAttribute('group-id');
        const colorID = clickableDiv.getAttribute('color-id');

        clickableDiv.addEventListener('click', function () {

            window.location.href = `/user/productDetails/${groupID}/?color=${colorID}`;
        });
    })




    window.addEventListener('load', renderBg);


    const notificationBtn = document.getElementById('notificationClose');
    const notificationMessage = document.getElementById('notification-message');
    const messageLine = document.getElementById('messageLine');

    notificationBtn.addEventListener('click', (e) => {

        notificationMessage.hidden = true
    })




</script>

