<title>Account Balance Transaction History</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }

        /* Responsive design */
        @media only screen and (max-width: 768px) {
            th, td {
                padding: 6px;
            }
        }
        @media only screen and (max-width: 480px) {
            th, td {
                padding: 4px;
            }
        }
    </style>
</head>
<body>

    <h2 style="text-align: center;" >Account Balance Transaction History</h1>
    <div class="table-container container my-4">
        <% if (transactions.length > 0) { %>
            <!-- Render the table with transactions -->
            <% transactions.forEach(transactionObj => { %>
               
                <p style="color: hwb(144 2% 53%);font-size: large;font-weight: bold;">Wallet Balance: <%= transactionObj.walletBalance %></p>
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transactionObj.walletTransaction.forEach(transaction => { %>
                            <tr>
                                <td><%= transaction.transactionDate %></td>
                                <td><%= transaction.transactionAmount %></td>
                                <td><%= transaction.transactionType %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% }); %>
        <% } else { %>
            <p>No transactions found.</p>
        <% } %>
    </div>
