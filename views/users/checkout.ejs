                                    <% if (userCart.items.length > 0) { %>
                                        <% userCart.items.forEach((item, index) => { %>
                                    <li><%= index + 1 %>. <%= item.product.name %> <%= item.quantity %><span> â‚¹<%= item.price*item.quantity %> </span></li>
                                   
                                    <% })%>

