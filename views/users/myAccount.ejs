<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>


        <!-- Breadcrumb Section Begin -->
        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Profile</h4>
                            <div class="breadcrumb__links">
                                <a href="/">Home</a>
                                <span>Profile</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <div class=" " style="background-color: rgba(255, 255, 255, 0.592);">
            <div class="container ">
                <div class="col-12">
                    <!-- Page title -->

                    <!-- Form START -->

                    <div class="row  ">


                        <h3 class="mb-5 mt-5 text-center font-weight-bold  text-white">Your Personal Details</h3>
                        <!-- Contact detail -->
                        <div class="col-xxl-12 mb-5 mb-xxl-0  ">

                            <div class=" row m-0 p-0 bg-secondary-soft rounded d-flex ">


                                <div style="max-height: 100%;" class=" col-12 col-lg-4 d-flex justify-content-center  ">

                                    <% if(user.profileImg){ %>
                                        <img class="" src="/img/profileImages/<%=user.profileImg%>"
                                            style='border-radius: 10%; max-height: 300px;' alt="">

                                        <%} else {%>

                                            <img class="" src="/img/p3.png" style='border-radius: 10%;' alt="">

                                            <%}%>

                                </div>

                                <div class=" col-12 col-lg-8  g-3 ">

                                    <div class="row">

                                        <!-- First Name -->
                                        <div class="col-md-6">
                                            <label class="form-label">First Name </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="First name" value="<%= user.firstName %>">
                                        </div>
                                        <!-- Last name -->
                                        <div class="col-md-6">
                                            <label class="form-label">Last Name </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="Last name" value="<%= user.lastName %>">
                                        </div>
                                        <!-- Phone number -->
                                        <div class="col-md-6">
                                            <label class="form-label">Phone number </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="Phone number" value="<%= user.phone%>">
                                        </div>
                                        <!-- Mobile number -->
                                        <div class="col-md-6">
                                            <label class="form-label">Joined Date </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="Phone number" value="<%= user.joined_date %>">
                                        </div>
                                        <!-- Email -->
                                        <div class="col-md-6">
                                            <label for="inputEmail4" class="form-label">Email </label>
                                            <input readonly type="email" class="form-control" id="inputEmail4"
                                                value="<%= user.email %>">
                                        </div>
                                        <!-- Skype -->
                                        <div class="col-md-6">
                                            <label class="form-label">Wallet </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="Phone number" value="<%-user.wallet%>">
                                        </div>


                                        <div class="mt-5 w-100 d-flex justify-content-center">

                                            <button class=" w-50 btn-dark p-1 mr-2"> <a href="/user/profile/edit"
                                                    class="nav-link">Edit Profile</a></button>

                                            <button class="btn-dark p-1 w-50 ml-2"> <a class="nav-link"
                                                    href="/user/logout">Logout</a></button>

                                        </div>

                                    </div>

                                </div> <!-- Row END -->


                            </div>
                        </div>
                        <!-- Upload profile -->




                        <!-- change password -->

                    </div> <!-- Row END -->
                    <!-- button -->

                    <!-- Form END -->
                </div>
            </div>
        </div>



        <div class="container">

            <div class="col-xxl-12">
                <div class="bg-secondary-soft px-4 py-5 rounded d-flex justify-content-center">
                    <div class="row g-3 w-75">
                        <h3 class="my-4 mb-5 mt-5 text-center font-weight-bold">Referral Details</h3>


                        <input class="form-control" type="text" disabled value="<% if(user.totalReferralReward > 0 ) {%>
                        <%-user.totalReferralReward%><%} else {%>0 
                            
                            <%}%>
                        
                        ">




                        <label for="">Total Referral Rewards</label>


                        <div class="form-control w-100" style="background-color: #e9ecef;">

                            <% if(user.successfulReferrals && user.successfulReferrals.length> 0){ %>

                                <% for(let i=0 ; i < user.successfulReferrals.length; i++ ){%>
                                    <%-user.successfulReferrals[i] %>


                                        <%}%>



                                            <%} else {%>

                                                No Successful Referrals

                                                <%}%>



                        </div>

                        <label for="">Successful Referrals</label>





                        <!-- Old password -->


                    </div>
                </div>
            </div>

        </div>



        <div class="container">

            <div class="col-xxl-12">
                <div class="bg-secondary-soft px-4 py-5 rounded d-flex justify-content-center">
                    <div class="row g-3 w-75">
                        <h3 class="my-4 mb-5 mt-5 text-center font-weight-bold">Change Your Password</h3>

                        <form id="changePasswordForm">

                            <div class="mt-3">
                                <label for="exampleInputPassword1" class="form-label">Current password
                                    *</label>

                                <input type="password" class="form-control " name="currentPassword"
                                    style="background-color: #e9ecef;" id="exampleInputPassword1">
                            </div>
                            <!-- New password -->
                            <div class="mt-3">
                                <label for="exampleInputPassword2" class="form-label">New password *</label>

                                <input style="background-color: #e9ecef;" type="text" name="newPassword"
                                    class="form-control" id="exampleInputPassword2">
                            </div>

                            <div class="mt-5 w-100 d-flex justify-content-center">

                                <button type="submit" class="w-75 btn-dark p-1">Change Password</button>

                            </div>


                        </form>
                        <!-- Old password -->


                    </div>
                </div>
            </div>

        </div>

        <%- include('../users/userFooter.ejs') %>

            <script src="/js/user/profilePasswordChange.js"></script>

            <%- include('../layouts/footer.ejs') %>