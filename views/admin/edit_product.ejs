<script>
    document.addEventListener("DOMContentLoaded", function() {
         // Close button event listener
         document.getElementById("removeImageButton").addEventListener("click", function() {
            // Hide the image container
            document.getElementById("imageContainer").style.display = "none";
            // Clear the image URL input value
            document.getElementById("imageUrl").value = "";
            // Show the file input
            document.getElementById("image").style.display = "block";
        });
        
        document.getElementById("removeImagesButton").addEventListener("click", function() {
            // Hide the image container
            document.getElementById("additionalImagesContainer").style.display = "none";
            // Clear the image URL input value
            //document.getElementById("imageUrl").value = "";
            // Show the file input
            document.getElementById("images").style.display = "block";
        });
        // Add an event listener to the form submit event
        document.getElementById("editProductForm").addEventListener("submit", function(event) {
            // Select all input and textarea elements within the form
            const formInputs = this.querySelectorAll("input, textarea");
            let isValid = true;

            // Iterate over each input element
            formInputs.forEach(function(input) {
                // Trim the value of each input element
                input.value = input.value.trim();

                // Perform validation based on input type
                switch (input.type) {
                    case "text":
                    case "textarea":
                        // Check if the input value is empty
                        if (input.value === "") {
                            isValid = false;
                            // Add a class to indicate invalid input
                            input.classList.add("is-invalid");
                        } else {
                            // Remove any existing invalid class
                            input.classList.remove("is-invalid");
                        }
                        break;
                    // Add validation for other input types as needed
                }
            });

            // Prevent form submission if validation fails
            if (!isValid) {
                event.preventDefault();
            }
        });
    });
</script>
