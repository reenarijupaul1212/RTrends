<section>
    <div class="container mt-5">
        <h1>Edit Category Type</h1>

        <!-- Form for editing a category type -->
        <form action="/edit-cat-type/<%= catType._id %>" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Category Type Name:</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= catType.name %>" required>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="status" name="status" <% if (catType.status) { %>checked<% } %>>
                <label class="form-check-label" for="status">Status</label>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</section>