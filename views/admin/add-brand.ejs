<div class="container mt-5">
    <h2>Create a New Brand</h2>
    <form id="addBrandForm" action="/admin/add-brand" method="POST" enctype="multipart/form-data">
      <div class="mb-6">
        <label for="name" class="form-label">Brand Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-6">
        <input type="file" name = "image" >
               
      </div>
      <div class="mb-6 form-check">
        <input type="checkbox" class="form-check-input" id="active" name="active" value="true">
        <label class="form-check-label" for="active"value="on">Active</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
          <%= error %>
      </div>
  <% } else if (success) { %>
      <div class="alert alert-success" role="alert">
          <%= success %>
      </div>
  <% } %>
  </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
        // Add an event listener to the form submit event
        document.getElementById("addBrandForm").addEventListener("submit", function(event) {
            // Select all input and textarea elements within the form
            const formInputs = this.querySelectorAll("input, textarea");
            let isValid = true;

            // Iterate over each input element
            formInputs.forEach(function(input) {
                // Trim the value of each input element
                input.value = input.value.trim();

                // Perform validation based on input type
                switch (input.type) {
                    case "text":
                    case "textarea":
                        // Check if the input value is empty
                        if (input.value === "") {
                            isValid = false;
                            // Add a class to indicate invalid input
                            input.classList.add("is-invalid");
                        } else {
                            // Remove any existing invalid class
                            input.classList.remove("is-invalid");
                        }
                        break;
                    // Add validation for other input types as needed
                }
            });

            // Prevent form submission if validation fails
            if (!isValid) {
                event.preventDefault();
            }
        });
    });
</script>