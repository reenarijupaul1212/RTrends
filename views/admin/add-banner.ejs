<script>
    function validateForm() {
        var nameInput = document.getElementById('name').value.trim();
        var descriptionInput = document.getElementById('description').value.trim();

        if (nameInput === '' || descriptionInput === '') {
            // Show SweetAlert error message if any of the fields are empty
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Please fill in all required fields.',
                confirmButtonText: 'OK'
            });
            return false; // Prevent form submission
        }

        // Optionally, you can perform additional validation here

        return true; // Proceed with form submission if all validations pass
    }
</script>
